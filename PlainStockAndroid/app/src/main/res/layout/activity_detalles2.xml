<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    android:gravity="center_horizontal"
    tools:context="com.fing.proingsoft.plainstock.Detalles"  >




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/LinearLayout1"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:text="@string/str_detalles_moment"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="28dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Balance  USD"
            android:textSize="16sp"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="94dp"
           />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:textSize="1sp"

        android:id="@+id/LinearLayout2"
         >

         <ListView


            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:textSize="1sp"
            android:layout_weight="0.5"
            android:id="@+id/lista_historia"

            android:layout_above="@+id/frag_menu_Preguntas"
             />





    </LinearLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.fing.proingsoft.plainstock.Frag_Menu"
        android:id="@+id/frag_menu_Preguntas"
        tools:layout="@layout/fragment_menu"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2.00" />



</LinearLayout>
